# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCOUNT_ID=123456789012

# Project Configuration
PROJECT_NAME=gdrive-webhook
ENVIRONMENT=dev
S3_BUCKET_NAME=your-gdrive-sync-bucket

# Google Drive Configuration
GDRIVE_FOLDER_ID=your-google-drive-folder-id

# File Sync Settings
ALLOWED_EXTENSIONS=.csv,.json,.parquet,.txt,.pdf
MAX_FILE_SIZE_MB=100

# Lambda Configuration
WEBHOOK_HANDLER_MEMORY=512
WEBHOOK_HANDLER_TIMEOUT=60
CHANNEL_RENEWAL_MEMORY=256
CHANNEL_RENEWAL_TIMEOUT=30

# Monitoring
ALERT_EMAIL=your-email@example.com
LOG_RETENTION_DAYS=30

# Terraform Configuration
TF_VAR_aws_region=${AWS_REGION}
TF_VAR_environment=${ENVIRONMENT}
TF_VAR_project_name=${PROJECT_NAME}
TF_VAR_s3_bucket_name=${S3_BUCKET_NAME}
TF_VAR_gdrive_folder_id=${GDRIVE_FOLDER_ID}
TF_VAR_allowed_extensions=${ALLOWED_EXTENSIONS}
TF_VAR_max_file_size_mb=${MAX_FILE_SIZE_MB}
TF_VAR_alert_email=${ALERT_EMAIL}
